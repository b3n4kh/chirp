from chirp import platform, CHIRP_VERSION

# Hack to setup environment
platform.get_platform()

import gtk
import sys
import os
import locale
import gettext

if hasattr(sys, "frozen"):
    log = file("debug.log", "w", 0)
    sys.stderr = log
    sys.stdout = log
elif not os.isatty(0):
    log = file(platform.get_platform().config_file("debug.log"), "w", 0)
    sys.stdout = log
    sys.stderr = log

print "CHIRP %s on %s (Python %s)" % (CHIRP_VERSION,
                                      platform.get_platform().os_version_string(),
                                      sys.version.split()[0])

execpath = platform.get_platform().executable_path()
localepath = os.path.abspath(os.path.join(execpath, "locale"))
if not os.path.exists(localepath):
    localepath = "/usr/share/chirp/locale"

langs = []
lc, encoding = locale.getdefaultlocale()
if (lc):
	langs = [lc]
try:
    langs += os.getenv("LANG").split(":")
except Exception:
    pass
path = "locale"
gettext.bindtextdomain("CHIRP", localepath)
gettext.textdomain("CHIRP")
lang = gettext.translation("CHIRP", localepath, languages=langs, fallback=True)
lang.install()

# Require Python 2.6.0 or newer
try:
    pyver = sys.version.split()[0]
    vmaj, vmin, vrel = pyver.split(".", 3)
    if int(vmaj) < 2 or int(vmin) < 6:
        raise Exception(_("Unsupported Python version "
                          "({ver}>=v2.6.0 required)").format(ver=pyver))
except Exception, e:
    d = gtk.MessageDialog(buttons=gtk.BUTTONS_OK, type=gtk.MESSAGE_ERROR)
    d.set_markup("<b>Error Starting CHIRP</b>")
    d.format_secondary_markup(str(e))
    d.run()
    d.destroy()
    sys.exit(1)

from chirpui import mainapp, config

a = mainapp.ChirpMain()

profile = False
if len(sys.argv) > 1:
    arg = sys.argv[1]
    index = 2
    if arg == "--profile":
        profile = True
    elif arg == "--help":
        print "Usage: %s [file...]" % sys.argv[0]
        sys.exit(0)
    else:
        index = 1
else:
    index = 1

for i in sys.argv[index:]:
    print "Opening %s" % i
    a.do_open(i)

a.show()

if profile:
    import cProfile, pstats
    cProfile.run("gtk.main()", "chirpw.stats")
    p = pstats.Stats("chirpw.stats")
    p.sort_stats("cumulative").print_stats(10)
else:
    gtk.main()

if config._CONFIG:
    config._CONFIG.set("last_dir",
                       platform.get_platform().get_last_dir(),
                       "state")
    config._CONFIG.save()
